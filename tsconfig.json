{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "useUnknownInCatchVariables": false,
    "baseUrl": "./",
    "paths": {
      "@Components/*": [
        "src/components/*"
      ],
      "@Models/*": [
        "src/models/*"
      ],
      "@Utils/*": [
        "src/utils/*"
      ],
      "@Constants/*": [
        "src/constants/*"
      ],
      "@Services/*": [
        "src/services/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
